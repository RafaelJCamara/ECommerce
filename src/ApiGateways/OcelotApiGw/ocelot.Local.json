        {
          "Host": "localhost",
          "Port": "8001"
        }
      ],
      "UpstreamPathTemplate": "/Basket/Checkout",
      "UpstreamHttpMethod": [
        "POST"
      ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
